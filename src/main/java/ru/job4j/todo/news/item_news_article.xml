<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingStart="16dp"
              android:paddingEnd="16dp"
              android:paddingTop="12dp"
              android:paddingBottom="12dp"
              android:background="@color/colorPrimary">

    <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Заголовок новости: Очень длинный заголовок, который должен обрезаться" />

    <TextView
            android:id="@+id/article_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorHint"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Краткое описание статьи, которое может занимать несколько строк и обрезаться, если оно слишком длинное." />

    <TextView
            android:id="@+id/article_source_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorHint"
            android:textSize="12sp"
            tools:text="Источник: MacRumors • 2 часа назад" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColorHint"
            android:layout_marginTop="12dp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                tools:context=".MainActivity">

    <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp" android:fontFamily="@font/montserrat_bold"
            android:text="@string/app_name" android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="30sp" />

    <EditText
            android:id="@+id/user_field"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"

            android:layout_below="@+id/logo"
            android:layout_marginTop="20sp" android:layout_marginHorizontal="20sp" android:backgroundTint="@color/colorAccent"
            android:inputType="textPersonName"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColorHint"
            android:hint="@string/hint_user_field" />

    <Button
            android:id="@+id/main_btn"

            android:layout_below="@+id/user_field"
            android:layout_marginTop="10sp" android:layout_marginHorizontal="130sp"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/main_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/news_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_btn"
            android:layout_marginTop="16dp" android:paddingBottom="16dp" android:clipToPadding="false"
            tools:listitem="@layout/item_news_article" /> </RelativeLayout>